FROM buglord/centos7-base:latest

# Install X server, XFCE desktop, and essential packages in separate commands
RUN yum install -y \
    xorg-x11-server-Xorg \
    xorg-x11-xauth \
    xorg-x11-utils \
    xorg-x11-drivers \
    mesa-libGL \
    dbus-x11

RUN yum install -y \
    xfce4-session \
    xfce4-panel \
    xfce4-terminal \
    xfwm4 \
    xfdesktop \
    thunar

RUN yum install -y \
    xrdp \
    xrdp-selinux \
    supervisor \
    which \
    firefox \
    fuse \
    fuse-libs \
    xdg-utils \
    wget \
    dbus && \
    yum clean all

# Configure XRDP
RUN cp /etc/xrdp/xrdp.ini /etc/xrdp/xrdp.ini.bak && \
    sed -i 's/max_bpp=32/max_bpp=24/g' /etc/xrdp/xrdp.ini && \
    sed -i 's/security_layer=negotiate/security_layer=rdp/g' /etc/xrdp/xrdp.ini && \
    systemctl enable xrdp

# Set up default user
RUN useradd -m xrdp && \
    echo "xrdp:xrdp" | chpasswd && \
    usermod -aG wheel xrdp

# Configure XFCE session
RUN echo "startxfce4" > /home/xrdp/.Xclients && \
    chmod +x /home/xrdp/.Xclients && \
    chown xrdp:xrdp /home/xrdp/.Xclients

# Set up D-Bus and required directories
RUN mkdir -p /run/dbus && \
    mkdir -p /var/run/dbus && \
    dbus-uuidgen > /var/lib/dbus/machine-id && \
    chown -R xrdp:xrdp /run/dbus

# Create supervisord config
RUN echo "[supervisord]" > /etc/supervisord.conf && \
    echo "nodaemon=true" >> /etc/supervisord.conf && \
    echo "" >> /etc/supervisord.conf && \
    echo "[program:dbus]" >> /etc/supervisord.conf && \
    echo "command=/usr/bin/dbus-daemon --system --nofork" >> /etc/supervisord.conf && \
    echo "autorestart=true" >> /etc/supervisord.conf && \
    echo "" >> /etc/supervisord.conf && \
    echo "[program:xrdp-sesman]" >> /etc/supervisord.conf && \
    echo "command=/usr/sbin/xrdp-sesman --nodaemon" >> /etc/supervisord.conf && \
    echo "autorestart=true" >> /etc/supervisord.conf && \
    echo "" >> /etc/supervisord.conf && \
    echo "[program:xrdp]" >> /etc/supervisord.conf && \
    echo "command=/usr/sbin/xrdp --nodaemon" >> /etc/supervisord.conf && \
    echo "autorestart=true" >> /etc/supervisord.conf

# Configure system for AppImage support
RUN echo "user_allow_other" >> /etc/fuse.conf && \
    modprobe fuse || true


# Download and install Cursor
RUN wget -O /tmp/cursor.app https://downloader.cursor.sh/linux && \
    chmod +x /tmp/cursor.app && \
    /tmp/cursor.app --appimage-extract && \
    mv squashfs-root /usr/local/cursor && \
    chown -R xrdp:xrdp /usr/local/cursor && \
    rm /tmp/cursor.app

# Set environment variables
ENV APPDIR=/usr/local/cursor

# Copy cursor startup script
COPY cursor-centos.sh /bin/cursor.sh
RUN chmod +x /bin/cursor.sh && \
    chown cursor:cursor /bin/cursor.sh

# Create desktop shortcut for Cursor
RUN mkdir -p /home/xrdp/Desktop && \
    echo "[Desktop Entry]" > /home/xrdp/Desktop/cursor.desktop && \
    echo "Name=Cursor" >> /home/xrdp/Desktop/cursor.desktop && \
    echo "Exec=/bin/cursor.sh" >> /home/xrdp/Desktop/cursor.desktop && \
    echo "Icon=/usr/local/cursor/resources/app/resources/linux/code.png" >> /home/xrdp/Desktop/cursor.desktop && \
    echo "Terminal=false" >> /home/xrdp/Desktop/cursor.desktop && \
    echo "Type=Application" >> /home/xrdp/Desktop/cursor.desktop && \
    echo "Categories=Development;" >> /home/xrdp/Desktop/cursor.desktop && \
    chmod +x /home/xrdp/Desktop/cursor.desktop && \
    chown -R xrdp:xrdp /home/xrdp/Desktop

ENV LANG=en_US.UTF-8

# Expose XRDP port
EXPOSE 3389

# Start supervisord
ENTRYPOINT ["/usr/bin/supervisord", "-c", "/etc/supervisord.conf"]