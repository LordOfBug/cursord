# First stage to copy GLIBC
FROM buglord/centos7-base:latest

# Install X server, XFCE desktop, and essential packages (without Chrome)
RUN yum install -y epel-release && \
    yum groupinstall -y "X Window System" "Xfce" && \
    yum install -y \
    xrdp \
    xrdp-selinux \
    supervisor \
    which \
    xorg-x11-xauth \
    xorg-x11-utils \
    mesa-libGL \
    libX11 \
    libXcomposite \
    libXcursor \
    libXdamage \
    libXext \
    libXi \
    libXtst \
    fuse \
    fuse-libs \
    xdg-utils \
    wget \
    dbus \
    dbus-x11 \
    redhat-lsb-core \
    liberation-fonts \
    && yum clean all

COPY google-chrome.repo /etc/yum.repos.d/

# Install Chrome with custom library path, ignoring dependencies
RUN yum install -y --skip-broken google-chrome-stable
# echo 'export LD_LIBRARY_PATH=/opt/glibc-2.28/lib:$LD_LIBRARY_PATH' >> /etc/profile.d/chrome-libs.sh

# Create cursor user
RUN useradd -m -s /bin/bash cursor && \
    echo "cursor ALL=(ALL) NOPASSWD:ALL" >> /etc/sudoers && \
    echo "cursor:cursor" | chpasswd && \
    usermod -aG wheel cursor

# Download and install Cursor
RUN wget -O /tmp/cursor.app https://downloader.cursor.sh/linux && \
    chmod +x /tmp/cursor.app && \
    /tmp/cursor.app --appimage-extract && \
    mv squashfs-root /usr/local/cursor && \
    chown -R cursor:cursor /usr/local/cursor && \
    rm /tmp/cursor.app

# Create Chrome wrapper script
RUN echo '#!/bin/bash' > /usr/local/bin/chrome-wrapper.sh && \
    echo 'LD_LIBRARY_PATH=/opt/glibc-2.28/lib:$LD_LIBRARY_PATH exec /usr/bin/google-chrome "$@"' >> /usr/local/bin/chrome-wrapper.sh && \
    chmod +x /usr/local/bin/chrome-wrapper.sh

# Configure XRDP
RUN echo "[Globals]" > /etc/xrdp/xrdp.ini && \
    echo "ini_version=1" >> /etc/xrdp/xrdp.ini && \
    echo "fork=true" >> /etc/xrdp/xrdp.ini && \
    echo "port=3389" >> /etc/xrdp/xrdp.ini && \
    echo "tcp_nodelay=true" >> /etc/xrdp/xrdp.ini && \
    echo "tcp_keepalive=true" >> /etc/xrdp/xrdp.ini && \
    echo "security_layer=rdp" >> /etc/xrdp/xrdp.ini && \
    echo "crypt_level=low" >> /etc/xrdp/xrdp.ini && \
    echo "allow_channels=true" >> /etc/xrdp/xrdp.ini && \
    echo "max_bpp=24" >> /etc/xrdp/xrdp.ini && \
    echo "bulk_compression=true" >> /etc/xrdp/xrdp.ini && \
    echo "" >> /etc/xrdp/xrdp.ini && \
    echo "[Xorg]" >> /etc/xrdp/xrdp.ini && \
    echo "name=Xorg" >> /etc/xrdp/xrdp.ini && \
    echo "lib=libxup.so" >> /etc/xrdp/xrdp.ini && \
    echo "username=ask" >> /etc/xrdp/xrdp.ini && \
    echo "password=ask" >> /etc/xrdp/xrdp.ini && \
    echo "ip=127.0.0.1" >> /etc/xrdp/xrdp.ini && \
    echo "port=-1" >> /etc/xrdp/xrdp.ini && \
    echo "" >> /etc/xrdp/xrdp.ini && \
    echo "[xrdp1]" >> /etc/xrdp/xrdp.ini && \
    echo "name=sesman-Xorg" >> /etc/xrdp/xrdp.ini && \
    echo "lib=libxup.so" >> /etc/xrdp/xrdp.ini && \
    echo "username=ask" >> /etc/xrdp/xrdp.ini && \
    echo "password=ask" >> /etc/xrdp/xrdp.ini && \
    echo "ip=127.0.0.1" >> /etc/xrdp/xrdp.ini && \
    echo "port=-1" >> /etc/xrdp/xrdp.ini

# Configure XRDP session settings
RUN echo "[Globals]" > /etc/xrdp/sesman.ini && \
    echo "ListenAddress=127.0.0.1" >> /etc/xrdp/sesman.ini && \
    echo "EnableUserWindowManager=true" >> /etc/xrdp/sesman.ini && \
    echo "UserWindowManager=/etc/xrdp/startwm.sh" >> /etc/xrdp/sesman.ini && \
    echo "DefaultWindowManager=/etc/xrdp/startwm.sh" >> /etc/xrdp/sesman.ini && \
    echo "" >> /etc/xrdp/sesman.ini && \
    echo "[Security]" >> /etc/xrdp/sesman.ini && \
    echo "AllowRootLogin=true" >> /etc/xrdp/sesman.ini && \
    echo "" >> /etc/xrdp/sesman.ini && \
    echo "[Sessions]" >> /etc/xrdp/sesman.ini && \
    echo "X11DisplayOffset=10" >> /etc/xrdp/sesman.ini && \
    echo "MaxSessions=50" >> /etc/xrdp/sesman.ini && \
    echo "" >> /etc/xrdp/sesman.ini && \
    echo "[Xorg]" >> /etc/xrdp/sesman.ini && \
    echo "param=/usr/bin/Xorg" >> /etc/xrdp/sesman.ini && \
    echo "param=-config" >> /etc/xrdp/sesman.ini && \
    echo "param=/etc/X11/xrdp/xorg.conf" >> /etc/xrdp/sesman.ini && \
    echo "param=-novtswitch" >> /etc/xrdp/sesman.ini && \
    echo "param=-sharevts" >> /etc/xrdp/sesman.ini && \
    echo "param=-noreset" >> /etc/xrdp/sesman.ini && \
    echo "param=-nolisten" >> /etc/xrdp/sesman.ini && \
    echo "param=tcp" >> /etc/xrdp/sesman.ini && \
    echo "param=-logfile" >> /etc/xrdp/sesman.ini && \
    echo "param=/var/log/Xorg.10.log" >> /etc/xrdp/sesman.ini && \
    echo "param=-ac" >> /etc/xrdp/sesman.ini

# Create supervisord config with X server
RUN echo "[supervisord]" > /etc/supervisord.conf && \
    echo "nodaemon=true" >> /etc/supervisord.conf && \
    echo "" >> /etc/supervisord.conf && \
    # Add X server first
    echo "[program:xorg]" >> /etc/supervisord.conf && \
    echo "command=/usr/bin/Xorg :10 -config /etc/X11/xrdp/xorg.conf -novtswitch -sharevts -noreset -nolisten tcp -logfile /var/log/Xorg.10.log -ac" >> /etc/supervisord.conf && \
    echo "user=cursor" >> /etc/supervisord.conf && \
    echo "priority=1" >> /etc/supervisord.conf && \
    echo "autorestart=true" >> /etc/supervisord.conf && \
    echo "" >> /etc/supervisord.conf && \
    # Then add other services
    echo "[program:dbus]" >> /etc/supervisord.conf && \
    echo "command=/usr/bin/dbus-daemon --system --nofork" >> /etc/supervisord.conf && \
    echo "priority=2" >> /etc/supervisord.conf && \
    echo "autorestart=true" >> /etc/supervisord.conf && \
    echo "" >> /etc/supervisord.conf && \
    echo "[program:xrdp-sesman]" >> /etc/supervisord.conf && \
    echo "command=/usr/sbin/xrdp-sesman --nodaemon" >> /etc/supervisord.conf && \
    echo "priority=3" >> /etc/supervisord.conf && \
    echo "autorestart=true" >> /etc/supervisord.conf && \
    echo "" >> /etc/supervisord.conf && \
    echo "[program:xrdp]" >> /etc/supervisord.conf && \
    echo "command=/usr/sbin/xrdp --nodaemon" >> /etc/supervisord.conf && \
    echo "priority=4" >> /etc/supervisord.conf && \
    echo "autorestart=true" >> /etc/supervisord.conf

# Create startup script
RUN echo '#!/bin/bash' > /etc/xrdp/startwm.sh && \
    echo 'export DISPLAY=:10' >> /etc/xrdp/startwm.sh && \
    echo 'export XAUTHORITY=$HOME/.Xauthority' >> /etc/xrdp/startwm.sh && \
    echo 'export XDG_SESSION_TYPE=x11' >> /etc/xrdp/startwm.sh && \
    echo 'export XDG_CURRENT_DESKTOP=XFCE' >> /etc/xrdp/startwm.sh && \
    echo 'export DESKTOP_SESSION=xfce' >> /etc/xrdp/startwm.sh && \
    echo 'exec startxfce4' >> /etc/xrdp/startwm.sh && \
    chmod +x /etc/xrdp/startwm.sh

# Configure XFCE session
RUN echo "startxfce4" > /home/cursor/.Xclients && \
    chmod +x /home/cursor/.Xclients && \
    chown cursor:cursor /home/cursor/.Xclients

# Set up D-Bus and required directories
RUN mkdir -p /run/dbus && \
    mkdir -p /var/run/dbus && \
    dbus-uuidgen > /var/lib/dbus/machine-id && \
    chown -R cursor:cursor /run/dbus

# Configure system for AppImage support
RUN echo "user_allow_other" >> /etc/fuse.conf && \
    modprobe fuse || true

# Set environment variables
ENV APPDIR=/usr/local/cursor

# Copy cursor startup script
COPY cursor-centos.sh /bin/cursor.sh
RUN chmod +x /bin/cursor.sh && \
    chown cursor:cursor /bin/cursor.sh

# Create desktop shortcut for Cursor
RUN mkdir -p /home/cursor/Desktop && \
    echo "[Desktop Entry]" > /home/cursor/Desktop/cursor.desktop && \
    echo "Name=Cursor" >> /home/cursor/Desktop/cursor.desktop && \
    echo "Exec=/bin/cursor.sh" >> /home/cursor/Desktop/cursor.desktop && \
    echo "Icon=/usr/local/cursor/resources/app/resources/linux/code.png" >> /home/cursor/Desktop/cursor.desktop && \
    echo "Terminal=false" >> /home/cursor/Desktop/cursor.desktop && \
    echo "Type=Application" >> /home/cursor/Desktop/cursor.desktop && \
    echo "Categories=Development;" >> /home/cursor/Desktop/cursor.desktop && \
    chmod +x /home/cursor/Desktop/cursor.desktop && \
    chown -R cursor:cursor /home/cursor/Desktop


# Configure Chrome as default browser
RUN mkdir -p /home/cursor/.config && \
    echo "[Default Applications]" > /home/cursor/.config/mimeapps.list && \
    echo "x-scheme-handler/http=chrome-wrapper.desktop" >> /home/cursor/.config/mimeapps.list && \
    echo "x-scheme-handler/https=chrome-wrapper.desktop" >> /home/cursor/.config/mimeapps.list && \
    echo "text/html=chrome-wrapper.desktop" >> /home/cursor/.config/mimeapps.list && \
    chown -R cursor:cursor /home/cursor/.config

# Create Chrome wrapper desktop entry
RUN echo "[Desktop Entry]" > /usr/share/applications/chrome-wrapper.desktop && \
    echo "Version=1.0" >> /usr/share/applications/chrome-wrapper.desktop && \
    echo "Name=Google Chrome" >> /usr/share/applications/chrome-wrapper.desktop && \
    echo "Exec=/usr/local/bin/chrome-wrapper.sh %U" >> /usr/share/applications/chrome-wrapper.desktop && \
    echo "Terminal=false" >> /usr/share/applications/chrome-wrapper.desktop && \
    echo "Icon=google-chrome" >> /usr/share/applications/chrome-wrapper.desktop && \
    echo "Type=Application" >> /usr/share/applications/chrome-wrapper.desktop && \
    echo "Categories=Network;WebBrowser;" >> /usr/share/applications/chrome-wrapper.desktop

# Add Chrome policy to disable sandbox (required for running in container)
RUN mkdir -p /etc/opt/chrome/policies/managed && \
    echo '{ "AllowInsecureLocalhost": true, "SandboxLinux": false }' > /etc/opt/chrome/policies/managed/policy.json
    
ENV LANG=en_US.UTF-8

# Expose XRDP port
EXPOSE 3389

# Create proper xorg.conf for container environment
RUN mkdir -p /etc/X11/xrdp && \
    echo 'Section "ServerFlags"' > /etc/X11/xrdp/xorg.conf && \
    echo '    Option "DontVTSwitch" "true"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Option "AutoAddDevices" "false"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Option "AutoEnableDevices" "false"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Option "DontZap" "true"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Option "IgnoreABI" "true"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Option "AllowMouseOpenFail" "true"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Option "PciForceNone" "true"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Option "AutoEnableDevices" "false"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Option "AutoAddDevices" "false"' >> /etc/X11/xrdp/xorg.conf && \
    echo 'EndSection' >> /etc/X11/xrdp/xorg.conf && \
    echo '' >> /etc/X11/xrdp/xorg.conf && \
    echo 'Section "Device"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Identifier "dummy_videocard"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Driver "dummy"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Option "ConstantDPI" "true"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    VideoRam 256000' >> /etc/X11/xrdp/xorg.conf && \
    echo 'EndSection' >> /etc/X11/xrdp/xorg.conf && \
    echo '' >> /etc/X11/xrdp/xorg.conf && \
    echo 'Section "Monitor"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Identifier "dummy_monitor"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    HorizSync 5.0-1000.0' >> /etc/X11/xrdp/xorg.conf && \
    echo '    VertRefresh 5.0-200.0' >> /etc/X11/xrdp/xorg.conf && \
    echo 'EndSection' >> /etc/X11/xrdp/xorg.conf && \
    echo '' >> /etc/X11/xrdp/xorg.conf && \
    echo 'Section "Screen"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Identifier "dummy_screen"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Device "dummy_videocard"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    Monitor "dummy_monitor"' >> /etc/X11/xrdp/xorg.conf && \
    echo '    DefaultDepth 24' >> /etc/X11/xrdp/xorg.conf && \
    echo '    SubSection "Display"' >> /etc/X11/xrdp/xorg.conf && \
    echo '        Depth 24' >> /etc/X11/xrdp/xorg.conf && \
    echo '        Modes "1024x768"' >> /etc/X11/xrdp/xorg.conf && \
    echo '        Virtual 1024 768' >> /etc/X11/xrdp/xorg.conf && \
    echo '    EndSubSection' >> /etc/X11/xrdp/xorg.conf && \
    echo 'EndSection' >> /etc/X11/xrdp/xorg.conf

# Ensure proper permissions
RUN chmod 644 /etc/X11/xrdp/xorg.conf

# Start supervisord
ENTRYPOINT ["/usr/bin/supervisord", "-c", "/etc/supervisord.conf"]
